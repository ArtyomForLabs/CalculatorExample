<UserControl x:Class="CalculatorProgrammerMode.ProgrammerMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalculatorProgrammerMode"
             mc:Ignorable="d" 
             d:DesignHeight="103.126" d:DesignWidth="238.437">
    <Grid>
        <TextBox x:Name="InputNumbers" Text="{Binding InputNumbers}"  TextWrapping="Wrap" Width="238" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label x:Name="BinNumber" Margin="0,32,0,0" Height="31" Background="White" Width="238" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <StackPanel Width="238" Height="40" Margin="0,63,0,0">
            <Button x:Name="buttonBin" Content="BIN" Command="{Binding BinCommand}"/>
            <Button x:Name="buttonHex" Content="HEX" Command="{Binding HexCommand}"/>
        </StackPanel>

    </Grid>
</UserControl>
